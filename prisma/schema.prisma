generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}
enum EventStatus {
  approved
  declined
  review
  blocked
}

model events {
  id           Int       @id @default(autoincrement())
  event_id     String    @unique @db.VarChar(255)
  payload      Json
  status       EventStatus @default(review)
  created_at   DateTime? @default(now()) @db.Timestamp(6)
  reviewed_at DateTime? @db.Timestamp(6)

  @@index([created_at], map: "idx_created_at")
  @@index([status], map: "idx_status")
}

model events_in_cellExpert {
  id                   Int         @id @default(autoincrement())
  event_id             String      @unique @db.Text
  status               EventStatus @default(review)
  payload              Json?
  created_at           DateTime    @default(now()) @db.Timestamp(6)
  reviewed_at          DateTime?   @db.Timestamp(6)
  sent_to_cellExpert_at DateTime    @db.Timestamp(6)

  @@index([created_at], map: "idx_created_at")
  @@index([status], map: "idx_status")
}
